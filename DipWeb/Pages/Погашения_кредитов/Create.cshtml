@page
@model DipWeb.Pages.Погашения_кредитов.CreateModel

@{
    ViewData["Title"] = "Create";
}



<h4>ПогашенияКредитов</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
