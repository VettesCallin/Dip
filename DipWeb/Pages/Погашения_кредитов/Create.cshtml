            </div>
            <div class="form-group">
                <label asp-for="ПогашенияКредитов.Сумма" class="control-label"></label>
                <input asp-for="ПогашенияКредитов.Сумма" class="form-control" />
                <span asp-validation-for="ПогашенияКредитов.Сумма" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ПогашенияКредитов.ДатаПлатежа" class="control-label"></label>
                <input asp-for="ПогашенияКредитов.ДатаПлатежа" class="form-control" />
                <span asp-validation-for="ПогашенияКредитов.ДатаПлатежа" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
