            <div class="form-group">
                <label asp-for="ПогашенияКредитов.НомерКредитногоДоговора" class="control-label"></label>
                <input asp-for="ПогашенияКредитов.НомерКредитногоДоговора" class="form-control" />
                <span asp-validation-for="ПогашенияКредитов.НомерКредитногоДоговора" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ПогашенияКредитов.ИдентификаторЮридическогоЛица" class="control-label"></label>
                <input asp-for="ПогашенияКредитов.ИдентификаторЮридическогоЛица" class="form-control" />
                <span asp-validation-for="ПогашенияКредитов.ИдентификаторЮридическогоЛица" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ПогашенияКредитов.ИдентификаторФизическогоЛица" class="control-label"></label>
                <input asp-for="ПогашенияКредитов.ИдентификаторФизическогоЛица" class="form-control" />
